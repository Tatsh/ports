PortSystem          1.0
PortGroup           github 1.0

github.setup        wakatime vim-wakatime 11.3.0
github.tarball_from archive
master_sites        ${github.homepage}/archive/
distfiles           ${version}.tar.gz
distname            vim-wakatime-${version}
worksrcdir          ${distname}
revision            0

patchfiles          patch-${name}-python.diff
patch.pre_args      -p1

categories          textproc devel

name                vim-wakatime
platforms           darwin linux freebsd
license             BSD
supported_archs     noarch
maintainers         {gmail.com:audvare @Tatsh}
description         Keep track of coding with WakaTime (Vim plugin).
long_description    ${description}

checksums           rmd160  20fb2df337b4e9ec40442275bac961215e3821e8 \
                    sha256  1821f46fe32eba81373779f166c4abd197a4dd555a056a83041ae73370e068cd \
                    size    23087

use_configure       no
build.cmd           echo
depends_run-append  bin:vim:vim port:wakatime-cli

destroot {
    xinstall -m 755 -d ${destroot}${prefix}/share/vim/vimfiles/plugin
    xinstall -m 644 ${worksrcpath}/plugin/wakatime.vim \
        ${destroot}${prefix}/share/vim/vimfiles/plugin/wakatime.vim
}
