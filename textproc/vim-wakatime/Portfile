# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4

PortSystem          1.0
PortGroup           github 1.0

set version         7.1.4
github.setup        wakatime vim-wakatime ${version}

patchfiles          ${name}-fix-cli-path.patch \
                    ${name}-python.patch
patch.pre_args      -p1

categories          textproc devel

name                vim-wakatime
version             ${version}
platforms           darwin linux freebsd
license             BSD
supported_archs     noarch
maintainers         {gmail.com:audvare @Tatsh}
description         Keep track of coding with WakaTime (Vim plugin).
long_description    ${description}

checksums           rmd160  32082b91b39e8c19b38c26ade8daebc8890ddfef \
                    sha256  a8e3a64e78596d3eaf06b9047eab37e083cda88128e5755d029298d9707cf6aa \
                    size    1751464

use_configure       no
build.cmd           echo
depends_run-append  bin:vim:vim port:wakatime

destroot {
    xinstall -m 755 -d ${destroot}${prefix}/share/vim/vimfiles/plugin
    xinstall -m 644 ${worksrcpath}/plugin/wakatime.vim \
        ${destroot}${prefix}/share/vim/vimfiles/plugin/wakatime.vim
}
