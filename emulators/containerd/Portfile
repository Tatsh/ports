# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4

PortSystem          1.0
PortGroup           golang 1.0

set commit          3662dc4c0b12cb5baebf1bb835a962b7e70d4efc
go.setup            github.com/containerd/containerd ${commit}
categories          emulators
maintainers         {gmail.com:audvare @Tatsh}
license             Apache-2
homepage            https://containerd.io/

description         A daemon to control runC.
long_description    ${description}


depends_build       port:go-md2man port:pkgconfig

checksums           rmd160  118d84c7f8faf11f95e6bb683082417cfef6888e \
                    sha256  5310766b9e06d5df467107aead78b106a3c9b097b2cc087561d4cec0f0df927e \
                    size    6641645

patch {
    reinplace "s/git describe --match.*$/echo ${name})/" ${worksrcpath}/Makefile
    reinplace "s/git rev-parse HEAD.*$/echo ${commit})/" ${worksrcpath}/Makefile
    reinplace "s/-s -w//" ${worksrcpath}/Makefile
}

build.cmd make "'BUILDTAGS=no_btrfs no_devmapper'" "'LDFLAGS=-extldflags -fno-PIC'" all man
build.env-append "GOFLAGS=-v -x -mod=vendor"

destroot {
    xinstall -m 0755 {*}[glob -nocomplain -directory ${worksrcpath}/bin *] ${destroot}${prefix}/bin/
    xinstall -m 0644 {*}[glob -nocomplain -directory ${worksrcpath}/man *.8] ${destroot}${prefix}/share/man/man8/
    xinstall -m 0644 {*}[glob -nocomplain -directory ${worksrcpath}/man *.5] ${destroot}${prefix}/share/man/man5/
}
