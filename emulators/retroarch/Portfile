PortSystem          1.0
PortGroup           github 1.0
PortGroup           xcode 1.0

github.setup        libretro RetroArch 1.9.1 v

name                retroarch
platforms           darwin
license             GPL-3
maintainers         {gmail.com:audvare @Tatsh}
categories          emulators games
description         Frontend for the libretro API.
long_description    ${description}

checksums           rmd160  2c4f65be5cb1be55da9f242af9721c5098fe01dc \
                    sha256  e1fb48a0c9f8ce4ca31699c9611727e3b04b127d7c7eb2de171809279681ddf3 \
                    size    39878651

xcode.project       ${worksrcpath}/pkg/apple/RetroArch.xcodeproj
xcode.target        RetroArch
xcode.destroot.settings \
    CODE_SIGN_IDENTITY=- \
    CODE_SIGN_STYLE=Manual \
    ENABLE_HARDENED_RUNTIME=NO \
    GCC_TREAT_WARNINGS_AS_ERRORS=NO

build {}

if {${os.major} < 10} {
    pre-fetch {
        ui_error "${name} @${version} requires OS X 10.6 or later."
        return -code error "incompatible OS X version"
    }
}
