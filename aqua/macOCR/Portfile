homepage            https://github.com/schappim/macOCR

checksums           rmd160  6d4076d32a9fa032d5134ffa6b3ca0680a762655 \
                    sha256  27f7923b406d93cb6e97624670076bdb06e69c0e4b5935c3b8efca7dc4d61aaf \
                    size    84799

xcode.scheme        ocr
xcode.configuration Release
xcode.destroot.settings \
    CODE_SIGN_IDENTITY=- \
    CODE_SIGN_STYLE=Manual \
    ENABLE_HARDENED_RUNTIME=NO
destroot.pre_args   -workspace ocr.xcworkspace \
                    -derivedDataPath ${worksrcpath}
xcode.destroot.path ${prefix}/bin

# Compile and install in one step, for now. See https://trac.macports.org/ticket/57137
build {}

if {${os.major} < 13} {
    pre-fetch {
        ui_error "${name} @${version} requires OS X 10.9 or later."
        return -code error "incompatible OS X version"
    }
}
