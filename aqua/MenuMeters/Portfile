PortSystem          1.0
PortGroup           github 1.0
PortGroup           xcode 1.0

github.setup        yujitach MenuMeters 2.0.9

categories-append   sysutils
license             GPL-2
maintainers         {gmail.com:audvare @Tatsh}
description         MenuMeters is a set of CPU, memory, disk, and network monitoring tools for macOS.
long_description    ${description}
homepage            https://github.com/yujitach/MenuMeters/

checksums           rmd160  51722b43b39703d172a9e40a98d8948b42ce903e \
                    sha256  35b45bf188b1a3b34ea32defa4a05759bcb451c490cef10f88116df239a1b8a6 \
                    size    1211513

xcode.target        "${name} No Sparkle"
xcode.configuration Release
xcode.destroot.settings \
    CODE_SIGN_IDENTITY=- \
    CODE_SIGN_STYLE=Manual \
    ENABLE_HARDENED_RUNTIME=NO

# Compile and install in one step, for now. See https://trac.macports.org/ticket/57137
build {}

if {${os.major} < 15} {
    pre-fetch {
        ui_error "${name} @${version} requires OS X 10.11 or later."
        return -code error "incompatible OS X version"
    }
}
