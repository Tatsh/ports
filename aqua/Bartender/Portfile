PortSystem          1.0

name                Bartender
version             3.1.25

categories          aqua
license             Restrictive
platforms           macosx
maintainers         {gmail.com:audvare @Tatsh}
description         Organise your menu icons.
long_description    Bartender 3 lets you organize your menu bar icons, by hiding them, \
                    rearranging them, show hidden items with a click or keyboard shortcut and \
                    have icons show when they update.
homepage            https://www.macbartender.com/
distfiles           "Bartender 3.zip"
master_sites        https://www.macbartender.com/Demo/
dist_subdir         ${name}/${version}_1

checksums           rmd160  ead9ba864d7164643350f625b0123e42d7a75b6e \
                    sha256  bd31aa2aab3262ed08f5c421d504b82893b5dfc546f37fc98eae23bc47494c8a \
                    size    10577084

livecheck.type      regex
livecheck.url       ${homepage}
livecheck.regex     "^Version\\: (\\d+\\S+)"

use_configure       no
use_zip             yes
extract.only        "Bartender 3.zip"
extract.mkdir       yes

if {${os.major} < 16} {
    pre-fetch {
        ui_error "${name} @${version} requires OS X 10.12 or later."
        return -code error "incompatible OS X version"
    }
}

build {}

destroot {
    file copy "${worksrcpath}/Bartender 3.app" "${destroot}/${applications_dir}/"
}
