# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4

PortSystem          1.0
PortGroup           github 1.0
PortGroup           xcode 1.0

github.setup        hschmidt EnvPane 0.8 releases/
# Use source tarball from tag, not release asset
github.tarball_from tarball
categories-append   sysutils
license             Apache-2
maintainers         {gmail.com:audvare @Tatsh}
description         Tool to set environment variables for an Aqua session.
long_description    ${description}

checksums           rmd160  a91cae0e0a051c2f25842414764d4c0c5555d863 \
                    sha256  d009d448f9225236ca25bd3fdc2821e69c31cc6f0f20f84948e4101c0e286d6e \
                    size    76351

xcode.target        ${name}
xcode.destroot.path ${prefix}/Library/PreferencePanes
xcode.destroot.settings \
    SDKROOT=macosx \
    CODE_SIGN_IDENTITY=- \
    CODE_SIGN_STYLE=Manual \
    ENABLE_HARDENED_RUNTIME=NO \
    GCC_TREAT_WARNINGS_AS_ERRORS=NO

patchfiles      patch-launch_priv.diff \
                patch-macports-project.diff
patch.pre_args  -p1 -t

build {}

if {${os.major} < 12} {
    pre-fetch {
        ui_error "${name} @${version} requires OS X 10.8 or later."
        return -code error "incompatible OS X version"
    }
}

post-destroot {
    ui_msg "******************************************************"
    ui_msg "*"
    ui_msg "* Note: ${name} cannot be installed for all users."
    ui_msg "*"
    ui_msg "* To finish installation, run the following command as a regular user. Choose "
    ui_msg "* 'Install for this user only' in System Preferences."
    ui_msg "*"
    ui_msg "    open ${xcode.destroot.path}/${name}.prefPane"
    ui_msg "*"
    ui_msg "******************************************************"
}
