PortSystem          1.0
PortGroup           github 1.0
PortGroup           xcode 1.0

github.setup        objective-see AuRevoir aa9f31b

name                AuRevoir
version             1.0.0_p20180514
categories          aqua sysutils
description         View and remove notification messages from Apple's Notification Database.
long_description    AuRevoir (French for 'goodbye') is a simple utility to view and remove \
                    notifications from Apple's Notification Database.
maintainers         {gmail.com:audvare @Tatsh}
# https://github.com/objective-see/AuRevoir/issues/5
license             Restrictive

checksums           rmd160  43e6db0649948693e2caa8274b63fef980e85ee6 \
                    sha256  db2debd30383f4839b19cf8decfffd39e9a86593453ce805065129bc36d065bd \
                    size    69857

worksrcdir          ${worksrcpath}/auRevoir

xcode.target        ${name}
xcode.configuration Release
xcode.build.settings \
    CODE_SIGN_IDENTITY=- \
    CODE_SIGN_STYLE=Manual
xcode.destroot.settings \
    CODE_SIGN_IDENTITY=- \
    CODE_SIGN_STYLE=Manual

patchfiles      osver.patch
patch.pre_args  -p2

# Compile and install in one step, for now. See https://trac.macports.org/ticket/57137
build {}

if {${os.major} < 17} {
    pre-fetch {
        ui_error "${name} @${version} requires OS X 10.13 or later."
        return -code error "incompatible OS X version"
    }
}
