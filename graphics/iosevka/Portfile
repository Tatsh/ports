distfiles           ttf-${name}-${version}.zip

checksums           rmd160  58c9adea69e633bcdc978fc890f51915922d7c6e \
                    sha256  79b89490ff364e072bde1d479715470f54337a973213f8c1c3fcc863aae616d5 \
