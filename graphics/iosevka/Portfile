distfiles           ttf-${name}-${version}.zip

checksums           rmd160  ecb0ba643da7214d684a2e2c625096bb90c3245a \
                    sha256  578c8c7582b9d66d8870b92ef38420c351e9130ef764acae4e3cce3fbe470402 \
