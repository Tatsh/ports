distfiles           ttf-${name}-${version}.zip

checksums           rmd160  87d5786bbe59f56548f484663c84a36bd2ed0fa7 \
                    sha256  d7710a49407cf0bbc5ae7702884c4095e7761b5c65bde4722500a7355f062da0 \
