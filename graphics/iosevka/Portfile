distfiles           ttf-${name}-${version}.zip

checksums           rmd160  3184dee68fd21e58e54d85454bf4ed013d1df9ff \
                    sha256  bdfcc5119a980b7fe68f54f880ac588d84277af966f181f99ad959c7257ca7bb \
