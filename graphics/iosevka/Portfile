worksrcdir
use_configure           no
use_zip                 yes

destroot.violate_mtree  yes

build {}

destroot {
    xinstall -d -m 755 ${destroot}/Library/Fonts
    foreach file [glob -nocomplain -directory ${worksrcpath} *.ttc] {
        set basename [lrange [split ${file} /] end end]
        copy ${file} ${destroot}/Library/Fonts/${basename}
    }
}

subport ${name}-term {
    distfiles           PkgTTC-SGr-IosevkaTerm-${version}.zip
    checksums           rmd160  666a84d06135910bdc7a3ed51895c3acf8ba8c4d \
                        sha256  50d4e58dcb880d0e57a37b05a918c3419ca12f556f54570d2f187b85bc38ad13 \
                        size    154787462
}
