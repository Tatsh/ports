distfiles           ttf-${name}-${version}.zip

checksums           rmd160  e54233ed5f41dae3a9bf417c6830d3685b8601bd \
                    sha256  6215c542fb10a3e9ec4334059447b6d999737455aaff357e26bc4272434c3a3a \
