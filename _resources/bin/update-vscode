#!/usr/bin/env bash
if [ -z "$1" ]; then
    echo 'Must pass version argument (without v)'
    exit 1
fi
new=$1
DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")/../.." > /dev/null 2>&1 && pwd)"
pushd "${DIR}/devel/vscode" || exit 1
sha=$(grep -E '^set sha\s' Portfile | awk '{ print $3 }')
new_sha=$(jq -r .version < <(curl -q "https://update.code.visualstudio.com/api/update/darwin/stable/${sha}"))
if [ -z "$new_sha" ] || [ "$new_sha" = "null" ]; then
    echo 'No update available from API (already on latest or bad response).'
    exit 1
fi
old_version=$(grep -E '^version' Portfile | awk '{print $2}')
sudo rm -f "$(port -q distfiles | head -n 1 | awk '{ print $2 }')"
sed -r -e "s/^set sha(\s+).*/set sha\1${new_sha}/" \
    -e "s/${old_version}/${new}/g" \
    -i Portfile
sudo port -v bump
popd || exit 1
sudo portindex
