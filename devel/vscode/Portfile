description         Free source code editor.
long_description    ${description}
homepage            https://code.visualstudio.com/
supported_archs     x86_64

extract.suffix      .zip
distfiles           VSCode-darwin${extract.suffix}
set sha             072586267e68ece9a47aa43f8c108e0dcbf44622
master_sites        https://vscode.download.prss.microsoft.com/dbazure/download/stable/${sha}/

checksums           rmd160  431eba7d00781d9d4ae5b62d99d2cd05fc9915bf \
                    sha256  f383e74485137ec7f84f7e8692035a79a280733d1497f06c3fa49df771bf1768 \
                    size    170089898

livecheck.type      regex
set update_sha      cc0baacfefc65f9caad1a498753154c1f456cbb3
livecheck.url       https://update.code.visualstudio.com/api/update/darwin/stable/${update_sha}/
livecheck.regex     "\"productVersion\"\\:\"(\\d+\\.\\d+\\.\\d+)\""

worksrcdir
use_configure           no
use_zip                 yes
configure.cxx_stdlib    libstdc++

build {}

destroot {
    copy "${worksrcpath}/Visual Studio Code.app" ${destroot}${applications_dir}
}

if {${os.major} < 14} {
    pre-fetch {
        ui_error "${name} @${version} requires OS X 10.10 or later."
        return -code error "incompatible OS X version"
    }
}
