PortSystem          1.0
PortGroup           xcode 1.0
PortGroup           github 1.0

github.setup        Carthage Commandant 0.15.0

license             MIT
maintainers         nomaintainer
description         Type-safe command line argument handling.
long_description    ${description}
categories          devel

checksums           rmd160  9a0c96cb3b851a4e8da25e1a199f9eb920365d05 \
                    sha256  e8ca762b0fecdb2dfc38efa3c493845d82ddf0778c3841519f3a850be0798c9f \
                    size    23178

xcode.target        Commandant
xcode.configuration Release

depends_build-append    port:Nimble port:Quick

if {${os.major} < 15} {
    pre-fetch {
        ui_error "${name} @${version} requires OS X 10.11 or later."
        return -code error "incompatible OS X version"
    }
}

destroot {
    file copy ${worksrcpath}/build/Release/Commandant.framework \
        ${destroot}${prefix}/Library/Frameworks/
}
