PortSystem          1.0
PortGroup           python 1.0

name                wakatime
version             13.1.0
platforms           darwin linux freebsd
license             BSD
supported_archs     noarch
categories          devel net python

python.versions         37 38 39
python.default_version  38

maintainers         {gmail.com:audvare @Tatsh}

description         Keep track of coding with WakaTime.
long_description    ${description}
homepage            https://wakatime.com/dashboard
master_sites        pypi:[string index ${python.rootname} 0]/${python.rootname}

distname            ${python.rootname}-${version}

checksums           rmd160  0ae5e731c9e1bbd9a7019f656956ef0ddfeee81c \
                    sha256  8da2e38335a60819b61adb60a72adc6588b3755eca376d05c9588cbf5fe64c57 \
                    size    2295171

patchfiles          ${name}-system-libs.patch
patch.pre_args      -p1

depends_run-append  port:py${python.version}-requests \
                    port:py${python.version}-pygments \
                    port:py${python.version}-tz \
                    port:py${python.version}-tzlocal

# variant ntlm description {NTLM support} {
#     depends_run-append port:py${python.version}-requests-ntlm
# }

if {$subport ne $name} {
    livecheck.type none
}

post-extract {
    exec rm -fR "${worksrcpath}/${name}/packages/"
}

post-destroot {
    set v1 [string index ${python.version} 0]
    set v2 [string index ${python.version} 1]
    ln -s ${prefix}/bin/python${v1}.${v2} ${destroot}${prefix}/libexec/wakatime-python
}
