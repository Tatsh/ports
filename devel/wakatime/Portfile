PortSystem          1.0
PortGroup           python 1.0

name                wakatime
version             10.8.0
platforms           darwin
license             BSD-3
supported_archs     noarch

python.versions         27 34 35 36
python.default_version  36

maintainers         nomaintainer

description         Keep track of coding with WakaTime.
long_description    ${description}
homepage            https://wakatime.com/dashboard
master_sites        pypi:[string index ${python.rootname} 0]/${python.rootname}

distname            ${python.rootname}-${version}

checksums           rmd160  f379300d9427e556537ac6a969b6c45231c966de \
                    sha256  fa9abae5eea4c87cf81822854d31e8bd6ce25c7c89ef16cd35b74187d557bae8 \
                    size    1524362

patchfiles          ${name}-system-libs.patch
patch.pre_args      -p1

depends_run-append  port:py${python.version}-requests \
                    port:py${python.version}-pygments \
                    port:py${python.version}-tz \
                    port:py${python.version}-tzlocal

# variant ntlm description {NTLM support} {
