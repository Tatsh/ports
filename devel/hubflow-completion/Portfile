PortSystem              1.0
PortGroup               github 1.0

github.setup        ladyrassilon git-hubflow-completion 0.5

name                hubflow-completion
version             0.5
revision            1
maintainers         {gmail.com:audvare @Tatsh}
license             MIT
description         Provides completions for DataSift's hubflow fork of git-flow.
long_description    ${description}
platforms           linux darwin freebsd
categories          devel

depends_run-append  port:bash-completion

checksums           rmd160  6c61b7f77f251ea3b7ecad153efdd2370679a0c8 \
                    sha256  eea242b8ed0cfff3075b46cf3a58c41b7c4bd1c40b575fd2dd0ed5c772ad6dff \
                    size    5541

use_configure       no
build {}

destroot {
    xinstall -m 755 -d "${destroot}${prefix}/etc/bash_completion.d"
    xinstall -m 644 "${worksrcpath}/git-hubflow-completion.bash" \
        "${destroot}${prefix}/etc/bash_completion.d/"
}
