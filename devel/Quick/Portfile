PortSystem          1.0
PortGroup           xcode 1.0
PortGroup           github 1.0

github.setup        Quick Quick 2.1.0 v

license             Apache-2.0
maintainers         {gmail.com:audvare @Tatsh}
description         The Swift (and Objective-C) testing framework.
long_description    ${description}
categories          devel

checksums           rmd160  4982b95bab221478b66369f81ef7a5b85a985416 \
                    sha256  6868abd5db1e157f281de05235c2e16945b136ae627bfe543245138e91fcd9aa \
                    size    1173702

depends_lib         port:Nimble

xcode.target        Quick-macOS
xcode.configuration Release

pre-fetch {
    if { [vercmp ${xcodeversion} "10.0"] < 0 } {
        ui_error "Xcode 10.0 or greater is needed to build ${name}; only found version ${xcodeversion}."
        return -code error "incompatible Xcode version"
    }
}

destroot {
    copy ${worksrcpath}/build/Release/Quick.framework \
        ${destroot}${prefix}/Library/Frameworks/
}
