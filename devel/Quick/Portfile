PortSystem          1.0
PortGroup           github 1.0
PortGroup           xcode 1.0

github.setup        Quick Quick 2.0.0 v
license             MIT
maintainers         nomaintainer
description         A matcher framework for Swift and Objective-C.
long_description    ${description}

depends_build-append port:Nimble

checksums           rmd160  e9f5d7e19c9ce4548832aa98911af60cc597cc9b \
                    sha256  20ba167d977fc317792c7583d5999c9e1e25bc93ebe15d716736e83ce1cb7dba \
                    size    1173178

xcode.target        Quick-macOS
xcode.configuration Release

if {${os.major} < 15} {
    pre-fetch {
        ui_error "${name} @${version} requires OS X 10.11 or later."
        return -code error "incompatible OS X version"
    }
}

destroot {
    file copy ${worksrcpath}/build/Release/Quick.framework \
        ${destroot}${prefix}/Library/Frameworks/
}
