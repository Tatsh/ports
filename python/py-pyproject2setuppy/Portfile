PortSystem          1.0
PortGroup           github 1.0
PortGroup           python 1.0

github.setup        mgorny pyproject2setuppy 22 v
name                py-${github.project}

# add .0 to version to make `port lint --nitpick` not trigger warning due to python.versions
# https://trac.macports.org/ticket/61980
version             ${github.version}.0
livecheck.version   ${github.version}

categories          python devel
platforms           darwin linux freebsd
license             BSD
supported_archs     noarch
maintainers         {gmail.com:audvare @Tatsh}
description         Tool to convert pyproject.toml-based projects to setuptools.
long_description    ${description}

python.versions         36 37 38 39 310 311

checksums           rmd160  e3055947544bb1ec245138e95c5ff4e2c9f149cd \
                    sha256  b8f17ff4947c2e59d96e5fe5ffcbd3d34a6a4acdc56e9ee0702ca60c2729959c \
                    size    13052

if {$subport ne $name} {
    livecheck.type      none
    depends_lib-append  port:py${python.version}-setuptools \
                        port:py${python.version}-toml
}
