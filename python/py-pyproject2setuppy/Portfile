PortSystem          1.0
PortGroup           python 1.0

name                py-pyproject2setuppy

# add .0 to version to make `port lint --nitpick` not trigger warning due to python.versions
# https://trac.macports.org/ticket/61980
version             22.0
distname            v[string range ${version} 0 end-2]
livecheck.version   v[string range ${version} 0 end-2]

categories          python devel
platforms           darwin linux freebsd
license             BSD
supported_archs     noarch
maintainers         {gmail.com:audvare @Tatsh}
description         Tool to convert pyproject.toml-based projects to setuptools.
long_description    ${description}
homepage            https://github.com/mgorny/${name}
master_sites        https://github.com/mgorny/${name}/archive/refs/tags/

python.versions         36 37 38 39

checksums           rmd160  f71facac741ad7e83e06b0c8cb762848da90397f \
                    sha256  95591f7abfbcd9b72b7a976da8ddcbd084590a92cdf4cec6afb24a241e093410 \
                    size    13046

if {$subport ne $name} {
    livecheck.type      none
    depends_lib-append  port:py${python.version}-setuptools \
                        port:py${python.version}-toml
}
