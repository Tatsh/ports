# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4

PortSystem          1.0
PortGroup           xcode 1.0
PortGroup           github 1.0

name                Latest
version             0.11
revision            0
github.setup        mangerlahn ${name} ${version}
description         A utility to check for available updates.
long_description    ${description}
maintainers         {gmail.com:audvare @Tatsh}
license             CC-BY-NC-SA-4
categories          sysutils aqua

set n_commits       487
master_sites        ${github.homepage}/archive/:latest
distfiles           ${version}.tar.gz:latest
distname            ${name}-${version}

checksums           ${version}.tar.gz \
                    rmd160  8261e2a9dbf9cc6f90ec789f7168940c8ebbc2df \
                    sha256  3b20dc1299356faf091757e6e2dfcfc88cac2e21b1dae9e984e8a4b497d8f5a9 \
                    size    2703513

xcode.scheme        ${name}
xcode.configuration Release
xcode.destroot.settings \
    SDKROOT=macosx \
    CODE_SIGN_IDENTITY=- \
    CODE_SIGN_STYLE=Manual \
    ENABLE_HARDENED_RUNTIME=NO
destroot.pre_args -derivedDataPath ${worksrcpath}

if {${os.major} < 20} {
    patchfiles patch-available-10-15.diff
}
patchfiles-append   patch-no-sparkle.diff
patch.pre_args      -p1

post-patch {
    reinplace "s/\\\$number_of_commits/${n_commits}/" \
        ${worksrcpath}/Latest.xcodeproj/project.pbxproj
}

# Compile and install in one step, for now. See https://trac.macports.org/ticket/57137
build {}

if {${os.major} < 17} {
    pre-fetch {
        ui_error "${name} @${version} requires OS X 10.13 or later."
        return -code error "incompatible OS X version"
    }
}
