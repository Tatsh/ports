destroot {
    xinstall -m 755 ${worksrcpath}/battery_stat ${destroot}${prefix}/bin/battery-stat
}

if {${os.major} < 18} {
    pre-fetch {
        ui_error "${name} @${version} requires OS X 10.14 or later."
        return -code error "incompatible OS X version"
    }
}
