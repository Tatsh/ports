categories          sysutils aqua

checksums           rmd160  38663694110aab261a8ecab33cadf00d1eabcc50 \
                    sha256  3cbff9bb58b7a1cd91aabb0d9310bdd1b230c5ab95782796d2ee35d4105dcf45 \
                    size    13267119

depends_lib         port:Repeat

destroot.pre_args   -derivedDataPath ${worksrcpath}/.dd
xcode.scheme        Stats
xcode.configuration Release
xcode.destroot.settings \
    CODE_SIGN_IDENTITY=- \
    CODE_SIGN_STYLE=Manual \
    ENABLE_HARDENED_RUNTIME=NO

patchfiles patch-deps.diff

# Compile and install in one step, for now. See https://trac.macports.org/ticket/57137
build {}

if {${os.major} < 17} {
    pre-fetch {
        ui_error "${name} @${version} requires OS X 10.13 or later."
        return -code error "incompatible OS X version"
    }
}
