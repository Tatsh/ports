post-destroot {
    file mkdir ${destroot}${prefix}/share/bash-completion/completions
    ln -s ${prefix}/lib/ruby2.5/gems/2.5.0/gems/lunchy-0.10.4/extras/lunchy-completion.bash \
        ${destroot}${prefix}/share/bash-completion/completions/lunchy
}
