build.cmd           echo

destroot {
    file copy "${worksrcpath}/Google Chrome.app" "${destroot}/${applications_dir}/"
}

notes "
Consider disabling Google's automatic updater:

defaults write com.google.Keystone.Agent checkInterval 0
"
