checksums           rmd160  e182e9251bfcae150b9af7b167350d87b231852b \
                    sha256  ad4e73c1fee864ee56b8952b61c0e18b4af9095a7d2284b34a7fbc2d7f31069a \
                    size    78770354

use_configure       no
use_dmg             yes
